{
  "compilerOptions": {
    "target": "es2017",
    "module": "commonjs",
    "moduleResolution": "node",
    "importHelpers": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "declaration": false,
    "inlineSourceMap": true,
    "skipLibCheck": true,
    "strictNullChecks": true,
    "isolatedModules": true,
    "lib": ["es2017"]
  },
  "include": ["src/**/*.ts"]
}
